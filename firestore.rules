rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Maps collection - puzzle levels
    match /maps/{document=**} {
      allow read, write: if true;
    }

    // Users collection - player profiles
    match /users/{document=**} {
      allow read, write: if true;
    }

    // Leaderboards collection - puzzle completion scores
    match /leaderboards/{document=**} {
      allow read, write: if true;
    }

    // Dev tasks collection - hidden developer task management (easter egg)
    match /dev_tasks/{document=**} {
      allow read, write: if true;
    }

    // Dev persons collection - task assignees (easter egg)
    match /dev_persons/{document=**} {
      allow read, write: if true;
    }
  }
}
